<sapp>
	<layout
		type='window'
		title='OAuth 2.0 Testing Client'
		width='900dp'
		minWidth='600dp'
		height='wrap'
		centerScreen='true'
		resizable='true'
		fontSize='20dp'
		>

		<grid
			width='*'
			height='wrap'
			margin='20dp'>

			<column
				width='220dp'
				/>

			<row>
				<hlinear					
					centerHorizontal='true'
					colspan='2'
					>
					<button
						name='btnExampleServer'
						style='button'
						text='Example Server'
						/>
					<button
						name='btnFacebookAPI'
						style='button'
						text='Facebook API'
						marginLeft='20dp'
						/>
				</hlinear>
			</row>
			
			<row>
				<label
					text='Authorize URL'
					style='label'
					/>
				<edit
					name='txtAuthUrl'
					style='input'
					/>
			</row>
			<row>
				<label
					text='Access Token URL'
					style='label'
					/>
				<edit
					name='txtAccessTokenUrl'
					style='input'
					/>
			</row>
			<row>
				<label
					text='Redirect URI'
					style='label'
					/>
				<edit
					name='txtRedirectUri'
					style='input'
					/>
			</row>
			<row height='15sp' />
			<row>
				<label
					text='Client ID'
					style='label'
					/>
				<edit
					name='txtClientId'
					style='input'
					/>
			</row>
			<row>
				<label
					text='Client Secret'
					style='label'
					/>
				<edit
					name='txtClientSecret'
					style='input'
					/>
			</row>
			<row>
				<label
					text='Scopes'
					style='label'
					/>
				<edit
					name='txtScopes'
					style='input'
					/>
			</row>
			<row>
				<label
					text='Username'
					style='label'
					/>
				<hlinear width='*'>
					<edit
						name='txtUsername'
						style='input'
						/>
					<label
						text='Password'
						style='label'
						width='wrap'
						marginLeft='30sp'
						marginRight='5sp'
						/>
					<password
						name='txtPassword'
						style='input'
						/>
				</hlinear>
			</row>
			<row height='35sp'>
				<label
					text='Grant Type'
					style='label'
					/>
				<hlinear width='*' alignCenter='true'>
					<radio
						text='Implicit'
						group='radioGrantType'
						value='implicit'
						style='radio'
						checked='true'
						/>
					<radio
						text='Code'
						group='radioGrantType'
						value='code'
						style='radio'
						/>
					<radio
						text='Client'
						group='radioGrantType'
						value='client'
						style='radio'
						/>
					<radio
						text='Password'
						group='radioGrantType'
						value='password'
						style='radio'
						/>
					<view width='*'/>
					<button
						name='btnAuth'
						style='button'
						text='Authorize'
						width='150dp'
						centerVertical='true'
						/>
				</hlinear>
			</row>
			<row>
				<label
					text='Authorization Code'
					style='label'
					/>
				<hlinear width='*'>
					<edit
						name='txtAuthCode'
						style='input'
						/>
					<button
						name='btnGetToken'
						style='button'
						text='Get Token'
						width='150dp'
						centerVertical='true'
						/>
				</hlinear>
			</row>
			<row>
				<label
					text='Access Token'
					style='label'
					/>
				<edit
					name='txtAccessToken'
					style='input'
					/>
			</row>
			<row>
				<label
					text='Refresh Token'
					style='label'
					/>
				<hlinear width='*'>
					<edit
						name='txtRefreshToken'
						style='input'
						/>
					<button
						name='btnRefresh'
						style='button'
						text='Refresh'
						width='150dp'
						centerVertical='true'
						/>
				</hlinear>
			</row>
			<row height='15sp'/>
			<row>
				<label
					text='Request URL'
					style='label'
					/>
				<hlinear width='*'>
					<edit
						name='txtRequestURL'
						style='input'
						/>
					<button
						name='btnSendRequest'
						style='button'
						text='Send'
						width='150dp'
						/>
				</hlinear>
			</row>
			<row>
				<label
					text='Response'
					style='label'
					/>
				<textArea
					name='txtResponse'
					width='*'
					height='150dp'
					readOnly='true'
					margin='5dp'
					/>
			</row>
			<row>
				<hlinear					
					centerHorizontal='true'
					colspan='2'
					>
					
					
				</hlinear>
			</row>
		</grid>

 	</layout>

	<style
		name='label'
		alignCenter='true'
		/>

	<style
		name='input'
		width='*'
		gravity='left'
		margin='5dp'
		/>
	
	<style
		name='button'
		width='200dp'
		fontSize='25dp'
		nativeWidget='true'
		/>

	<style
		name='radio'
		fontSize='25dp'
		marginLeft='5sp'
		nativeWidget='true'
		centerVertical='true'
		/>

</sapp>