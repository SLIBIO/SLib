<sapp>
	<layout
		type='page'
		background='white'
		>
		<scroll width='fill' height='fill' horizontal='false'>
			<group width='fill' minHeight='100%vh'>
				<linear
					alignCenter='true'
					padding='10%smin'
				>

					<button name='btnHelloWorld' text='@string/hello_world' style='menu_button'/>

					<button name='btnViewPager' text='ViewPager' style='menu_button'/>

					<button name='btnListView' text='ListView' style='menu_button'/>

					<button name='btnDrawer' text='Drawer' style='menu_button'/>

					<button name='btnVideoView' text='VideoView' style='menu_button'/>

					<button name='btnCameraView' text='CameraView' style='menu_button'/>

					<button name='btnWebView' text='WebView' style='menu_button'/>

					<button name='btnControlScreen' text='Control Screen' style='menu_button'/>

					<button name='btnLoginPage' text='Login Page' style='menu_button'/>

					<button name='btnQRCodeScanner' text='QRCodeScanner' style='menu_button'/>

				</linear>
			</group>
		</scroll>
 	</layout>

	<style
		name='menu_button'
		inherit='button_normal'
		width='50%smin'
		marginTop='1%smin'
		/>

</sapp>