<sapp>
	<layout
		type='page'
		background='#f7f7f5'
		>
		
		<linear
			width='fill'
			centerVertical='true'
		>
			<image
				src='@drawable/slib_icon'
				width='50%sw'
				centerHorizontal='true'
				/>

			<hlinear style='login_section'>
				<label
					style='label'
					text='Job'
					width='30%sw'
					gravity='center'
					centerVertical='true'
					/>
				
				<select
					name='selectJob'
					width='*'
					fontSize='4%sw'
					border='false'
					centerVertical='true'
				>
					<item value='0' title='Student' selected='true'/>
					<item value='1' title='Teacher'/>
				</select>
			</hlinear>

			<view style='border' />

			<hlinear style='login_section'>
				<label
					style='label'
					text='Email'
					width='30%sw'
					gravity='center'
					centerVertical='true'
					/>
				
				<edit
					name='txtEmail'
					style='edit'
					width='*'
					gravity='left'
					hintText='Input your email address'
					border='false'
					centerVertical='true'
					/>
			</hlinear>

			<view style='border' />

			<hlinear style='login_section'>
				<label
					style='label'
					text='Password'
					width='30%sw'
					gravity='center'
					centerVertical='true'
					/>
				
				<password
					name='txtPassword'
					style='edit'
					width='*'
					gravity='left'
					hintText='Enter password'
					border='false'
					centerVertical='true'
					/>
			</hlinear>

			<view style='border' />

			<button
				name='btnLogin'
				margin='6%sw'
				style='button'
				text='Login'
				width='fill'
				/>

		</linear>

		<button
			style='button_back'
			/>
 	</layout>

	<style name='label' fontSize='4%sw' textColor='black' />

	<style name='edit' fontSize='4%sw' textColor='black' height='6%sw'/>

	<style name='login_section' width='fill' paddingTop='3%sw' background='white' />

	<style name='border' width='fill' height='1px' background='#c0c0c0'/>

	<style
		name='button'
		fontSize='5%sw'
		height='10%sw'
		background='#408000'
		textColor='white'
		boundRadius='1%sw'
		border='false'
		clipping='true'
		/>

</sapp>