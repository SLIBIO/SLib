<sapp>
	<layout
		type='page'
		background='@drawable/background'
		backgroundScale='cover'
		>
		
		<linear alignCenter='true'>

			<image
				src='@drawable/lion'
				width='35%sw'
				centerHorizontal='true'/>
			
			<label
				text='@string/hello_world'
				marginTop='2%sh'
				fontSize='5%sw'
				textColor='white'
				centerHorizontal='true'
				/>

		</linear>

		<button
			style='button_back'
			colorOverlay='white'
			colorOverlayPressed='blue'
			/>

		<drawer gravity='left' dragEdgeSize='6mm'>
			<group width='50%sw' height='fill' background='#a0a0a0'>
				<button text='Close' style='button_normal' width='25%smin' alignCenter='true' cancel='true' />
			</group>
		</drawer>

 	</layout>
</sapp>